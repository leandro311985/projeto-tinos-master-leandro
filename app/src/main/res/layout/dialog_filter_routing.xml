<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView"
        style="@style/FormasEntregaDialogTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:text="Filtro"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:background="@color/lightGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/ckPending"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:text="Imóveis pendentes"
        android:textSize="18sp"
        app:buttonTint="@color/colorPrimaryDarker"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/ckFinished"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Imóveis finalizados"
        android:textSize="18sp"
        app:buttonTint="@color/colorPrimaryDarker"
        app:layout_constraintEnd_toEndOf="@+id/ckPending"
        app:layout_constraintStart_toStartOf="@+id/ckPending"
        app:layout_constraintTop_toBottomOf="@+id/ckPending" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/ckReversed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:buttonTint="@color/colorPrimaryDarker"
        android:layout_marginTop="40dp"
        android:textSize="18sp"
        android:text="Inverter ordem"
        app:layout_constraintEnd_toEndOf="@+id/ckFinished"
        app:layout_constraintStart_toStartOf="@+id/ckFinished"
        app:layout_constraintTop_toBottomOf="@+id/ckFinished" />


    <Button
        android:id="@+id/btCancel"
        style="@style/RoundedBorderedButton"
        android:layout_width="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="52dp"
        android:text="Cancelar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btConfirm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ckReversed" />

    <Button
        android:id="@+id/btConfirm"
        style="@style/RoundedButton"
        android:layout_width="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="24dp"
        android:text="Confirmar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btCancel"
        app:layout_constraintTop_toTopOf="@+id/btCancel" />

</androidx.constraintlayout.widget.ConstraintLayout>