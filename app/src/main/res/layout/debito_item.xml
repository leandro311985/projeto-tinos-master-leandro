<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:padding="18dp"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg_white_selector">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/text_color_accent_selector"
        android:textSize="18dp"
        tools:text="Janeiro"
        android:layout_marginStart="20dp"
        android:id="@+id/data"
        android:fontFamily="@font/breeserif_regular"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/valor"
        tools:text="R$ 75,00"
        android:textColor="@color/text_color_accent_selector"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:id="@+id/vencimento"
        android:layout_marginTop="8dp"
        android:textColor="@color/text_color_accent_selector"
        app:layout_constraintEnd_toEndOf="@+id/valor"
        app:layout_constraintTop_toBottomOf="@+id/valor"
        tools:text="Venc. 12/09/2018"/>

</androidx.constraintlayout.widget.ConstraintLayout>